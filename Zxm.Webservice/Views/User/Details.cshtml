@{
    ViewBag.Title = "User Details";
}

<html>
    <head>
        <title>@ViewBag.Title</title>
        <style>
            html, body
            {
                margin: 0;
                padding: 0;
                font-family: Helvetica, Arial, sans-serif;
            }

            body
            {
                background-color: white;
            }

            .batch
            {
                border-radius: 50%;
                border: 2px solid beige;
                box-shadow: 4px 4px 50px #333;
                height: 150px;
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-top: 20px;
                margin-bottom: 20px;
            }

            .logo
            {
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-top: 50px;
            }

            p
            {
                margin-left: auto;
                margin-right: auto;
                margin-top: 0;
                margin-bottom: 3px;
                width: 100%;
                text-align: center;                
            }

            .name
            {
                margin-bottom: 20px;
                color: orange;
                font-weight: bold;
            }
		</style>
    </head>
    <body>
        <img class="batch" src="@ViewBag.User.ImageUri">
        <p class="name">@ViewBag.User.FirstName @ViewBag.User.LastName</p>
        <p>Phone: @ViewBag.User.PhoneNumber</p>
        <p><a href="mailto:@ViewBag.User.Email" title="Send email">@ViewBag.User.Email</a></p>
        <p><a href="@ViewBag.User.WebPage" title="Visit website">@ViewBag.User.WebPage</a></p>
        <img class="logo" src="/Content/Images/zuhlke.png" title="Z&uuml;hlke">
    </body>
</html>

